	var p19 := select(a < b, 0, 1);
	var p20 := select(a <= b, 0, 1);
	var p21 := select(a > b, 0, 1);
	var p22 := select(a >= b, 0, 1);
	var p23 := select(a bt b, 0, 1);
	var p24 := not a;
	var p25 := -a;
	var p26 := bswap a;
	var p27 := brev a;
	var p28 := bsf a;
	var p29 := bsr a;
	var p30 := popcnt a;
	var p31 := a + 1;
	var p32 := a - 1;
