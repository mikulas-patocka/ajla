	var p35 := a mod 5;
	var p36 := ipower(a, 6);
	var p37 := a and 7;
	var p38 := a or 8;
	var p39 := a xor 9;
	var p40 := a shl 10;
	var p41 := a shr 11;
	var p42 := a rol 12;
