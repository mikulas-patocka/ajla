const ev_tag_mouse_button := 3;
const ev_tag_redraw := 4;
const ev_tag_resize := 5;
const ev_tag_suspend := 6;

record event_keyboard [
	key : char;
	flags : int;
	rep : int;
]

record event_resize [
	x y : int where value >= 1;
]

record event_redraw [
	x1 y1 x2 y2 : int;
]

record event_mouse [
	x y prev_buttons buttons double_buttons wx wy : int;
	soft_cursor : bool;
]

option event [
	keyboard : event_keyboard;
	resize : event_resize;
	redraw : event_redraw;
	mouse : event_mouse;
	suspend;
	altmq;
]

