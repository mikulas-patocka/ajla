fn os2_ctrlmap(p : list(int32)) : int
[
	var result := 0;
	var p3 := p[3];
	if p3 bt 0 or p3 bt 1 then
		result or= key_flag_shift;
	if p3 bt 2 then
		result or= key_flag_ctrl;
	if p3 bt 3 then
		result or= key_flag_alt;
	return result;
]

